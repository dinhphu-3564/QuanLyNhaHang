@model List<Web_QLNhaHang.Models.CartItem>
@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal total = Model.Sum(c => c.SubTotal);
}

<style>
    .cart-section {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 80vh;
        padding: 40px 0 60px;
    }
    .cart-header {
        text-align: center;
        margin-bottom: 40px;
    }
    .cart-header h2 {
        font-size: 2.2rem;
        font-weight: 700;
        color: #1a472a;
        margin-bottom: 10px;
    }
    .cart-header p {
        color: #666;
        font-size: 1.1rem;
    }
    .cart-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.08);
        overflow: hidden;
        border: none;
        margin-bottom: 1.5rem;
    }
    .cart-card-header {
        background: linear-gradient(135deg, #1a472a 0%, #2d5a3d 100%);
        color: white;
        padding: 1.25rem 1.5rem;
        font-weight: 600;
        font-size: 1.1rem;
    }
    .cart-card-header i {
        margin-right: 10px;
    }
    .cart-item {
        display: flex;
        align-items: center;
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #eee;
        transition: background-color 0.2s;
    }
    .cart-item:last-child {
        border-bottom: none;
    }
    .cart-item:hover {
        background-color: #fafafa;
    }
    .cart-item-image {
        width: 90px;
        height: 90px;
        border-radius: 12px;
        object-fit: cover;
        margin-right: 20px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        flex-shrink: 0;
    }
    .cart-item-image-placeholder {
        width: 90px;
        height: 90px;
        border-radius: 12px;
        background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 20px;
        flex-shrink: 0;
    }
    .cart-item-image-placeholder i {
        font-size: 2rem;
        color: #aaa;
    }
    .cart-item-info {
        flex: 1;
        min-width: 0;
    }
    .cart-item-name {
        font-weight: 700;
        font-size: 1.1rem;
        color: #333;
        margin-bottom: 5px;
    }
    .cart-item-price {
        color: #e74c3c;
        font-weight: 600;
        font-size: 1rem;
    }
    .cart-item-quantity {
        display: flex;
        align-items: center;
        margin: 0 20px;
    }
    .quantity-input {
        width: 60px;
        text-align: center;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        padding: 8px;
        font-weight: 600;
        margin-right: 8px;
    }
    .quantity-input:focus {
        border-color: #1a472a;
        outline: none;
    }
    .btn-update-qty {
        background: #1a472a;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 8px 12px;
        transition: all 0.3s;
    }
    .btn-update-qty:hover {
        background: #2d5a3d;
        color: white;
    }
    .cart-item-subtotal {
        font-weight: 700;
        font-size: 1.15rem;
        color: #1a472a;
        min-width: 120px;
        text-align: right;
    }
    .btn-remove {
        background: transparent;
        border: 2px solid #dc3545;
        color: #dc3545;
        border-radius: 8px;
        padding: 8px 12px;
        margin-left: 15px;
        transition: all 0.3s;
    }
    .btn-remove:hover {
        background: #dc3545;
        color: white;
    }
    .cart-notes {
        padding: 0 1.5rem 1.25rem;
        background: #fafafa;
        border-bottom: 1px solid #eee;
    }
    .cart-notes-form {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .cart-notes-input {
        flex: 1;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        padding: 10px 15px;
        font-size: 0.9rem;
    }
    .cart-notes-input:focus {
        border-color: #1a472a;
        outline: none;
    }
    .btn-save-notes {
        background: #6c757d;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
        transition: all 0.3s;
    }
    .btn-save-notes:hover {
        background: #5a6268;
        color: white;
    }
    .cart-footer {
        padding: 1.25rem 1.5rem;
        background: white;
    }
    .btn-continue {
        background: transparent;
        border: 2px solid #1a472a;
        color: #1a472a;
        border-radius: 50px;
        padding: 12px 25px;
        font-weight: 600;
        transition: all 0.3s;
    }
    .btn-continue:hover {
        background: #1a472a;
        color: white;
    }
    .summary-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.08);
        overflow: hidden;
        position: sticky;
        top: 100px;
    }
    .summary-header {
        background: linear-gradient(135deg, #1a472a 0%, #2d5a3d 100%);
        color: white;
        padding: 1.25rem 1.5rem;
        font-weight: 600;
        font-size: 1.1rem;
    }
    .summary-body {
        padding: 1.5rem;
    }
    .summary-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #eee;
    }
    .summary-row:last-of-type {
        border-bottom: none;
    }
    .summary-row.total {
        padding-top: 20px;
        margin-top: 10px;
        border-top: 2px solid #1a472a;
        border-bottom: none;
    }
    .summary-label {
        color: #666;
        font-size: 1rem;
    }
    .summary-value {
        font-weight: 600;
        color: #333;
    }
    .summary-value.free {
        color: #28a745;
    }
    .summary-total-label {
        font-size: 1.2rem;
        font-weight: 700;
        color: #333;
    }
    .summary-total-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #e74c3c;
    }
    .btn-checkout {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        border: none;
        border-radius: 50px;
        padding: 16px 30px;
        font-size: 1.1rem;
        font-weight: 600;
        width: 100%;
        margin-top: 20px;
        transition: all 0.3s;
    }
    .btn-checkout:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(40, 167, 69, 0.35);
        color: white;
    }
    .security-note {
        text-align: center;
        margin-top: 15px;
        color: #888;
        font-size: 0.875rem;
    }
    .security-note i {
        color: #28a745;
        margin-right: 5px;
    }
    .empty-cart {
        text-align: center;
        padding: 80px 20px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.08);
    }
    .empty-cart-icon {
        font-size: 100px;
        color: #ddd;
        margin-bottom: 30px;
    }
    .empty-cart h4 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 15px;
    }
    .empty-cart p {
        color: #666;
        margin-bottom: 30px;
    }
    .btn-browse-menu {
        background: linear-gradient(135deg, #1a472a 0%, #2d5a3d 100%);
        color: white;
        border: none;
        border-radius: 50px;
        padding: 15px 40px;
        font-size: 1.1rem;
        font-weight: 600;
        transition: all 0.3s;
    }
    .btn-browse-menu:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(26, 71, 42, 0.35);
        color: white;
    }
    @@media (max-width: 991px) {
        .cart-item {
            flex-wrap: wrap;
        }
        .cart-item-quantity {
            margin: 15px 0 0 110px;
        }
        .cart-item-subtotal {
            margin: 15px 0 0 auto;
        }
        .btn-remove {
            margin: 15px 0 0 15px;
        }
    }
    @@media (max-width: 576px) {
        .cart-item {
            flex-direction: column;
            align-items: flex-start;
        }
        .cart-item-image, .cart-item-image-placeholder {
            margin-bottom: 15px;
        }
        .cart-item-quantity {
            margin: 15px 0 0 0;
        }
        .cart-item-subtotal {
            margin: 15px 0 0 0;
            text-align: left;
        }
        .btn-remove {
            margin: 15px 0 0 0;
        }
    }
</style>

<section class="cart-section">
    <div class="container">
        <!-- Header -->
        <div class="cart-header">
            <h2><i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn</h2>
            <p>@Model.Count món ăn trong giỏ hàng</p>
        </div>

        @if (Model.Count == 0)
        {
            <!-- Empty Cart -->
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="empty-cart">
                        <div class="empty-cart-icon">
                            <i class="fas fa-shopping-basket"></i>
                        </div>
                        <h4>Giỏ hàng của bạn đang trống</h4>
                        <p>Hãy khám phá thực đơn và thêm những món ăn ngon vào giỏ hàng!</p>
                        <a asp-controller="Menu" asp-action="Index" class="btn btn-browse-menu">
                            <i class="fas fa-utensils me-2"></i>Xem thực đơn
                        </a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <!-- Cart Items -->
                <div class="col-lg-8 mb-4">
                    <div class="cart-card">
                        <div class="cart-card-header">
                            <i class="fas fa-list"></i>Chi tiết giỏ hàng
                        </div>
                        
                        @foreach (var item in Model)
                        {
                            <div class="cart-item">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" alt="@item.DishName" class="cart-item-image">
                                }
                                else
                                {
                                    <div class="cart-item-image-placeholder">
                                        <i class="fas fa-utensils"></i>
                                    </div>
                                }
                                
                                <div class="cart-item-info">
                                    <div class="cart-item-name">@item.DishName</div>
                                    <div class="cart-item-price">@item.Price.ToString("N0") ₫</div>
                                </div>
                                
                                <div class="cart-item-quantity">
                                    <form asp-action="UpdateCart" method="post" style="display: flex; align-items: center;">
                                        <input type="hidden" name="dishId" value="@item.DishId">
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" max="99" class="quantity-input">
                                        <button type="submit" class="btn-update-qty" title="Cập nhật">
                                            <i class="fas fa-sync-alt"></i>
                                        </button>
                                    </form>
                                </div>
                                
                                <div class="cart-item-subtotal">
                                    @item.SubTotal.ToString("N0") ₫
                                </div>
                                
                                <form asp-action="RemoveFromCart" method="post" style="display: inline;">
                                    <input type="hidden" name="dishId" value="@item.DishId">
                                    <button type="submit" class="btn-remove" onclick="return confirm('Bạn có chắc muốn xóa món này?')" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                            
                            <div class="cart-notes">
                                <form asp-action="UpdateCartNotes" method="post" class="cart-notes-form">
                                    <input type="hidden" name="dishId" value="@item.DishId">
                                    <i class="fas fa-sticky-note text-muted"></i>
                                    <input type="text" name="notes" value="@item.Notes" class="cart-notes-input" placeholder="Ghi chú: ít cay, không hành...">
                                    <button type="submit" class="btn-save-notes">
                                        <i class="fas fa-save me-1"></i>Lưu
                                    </button>
                                </form>
                            </div>
                        }
                        
                        <div class="cart-footer">
                            <a asp-controller="Menu" asp-action="Index" class="btn-continue">
                                <i class="fas fa-arrow-left me-2"></i>Tiếp tục mua sắm
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="col-lg-4">
                    <div class="summary-card">
                        <div class="summary-header">
                            <i class="fas fa-receipt me-2"></i>Tóm tắt đơn hàng
                        </div>
                        <div class="summary-body">
                            <div class="summary-row">
                                <span class="summary-label">Số lượng món:</span>
                                <span class="summary-value">@Model.Count món</span>
                            </div>
                            <div class="summary-row">
                                <span class="summary-label">Tạm tính:</span>
                                <span class="summary-value">@total.ToString("N0") ₫</span>
                            </div>
                            <div class="summary-row">
                                <span class="summary-label">Phí giao hàng:</span>
                                <span class="summary-value free">Miễn phí</span>
                            </div>
                            <div class="summary-row total">
                                <span class="summary-total-label">Tổng cộng:</span>
                                <span class="summary-total-value">@total.ToString("N0") ₫</span>
                            </div>
                            
                            <a asp-controller="Order" asp-action="Checkout" class="btn-checkout">
                                <i class="fas fa-credit-card me-2"></i>Tiến hành thanh toán
                            </a>
                            
                            <div class="security-note">
                                <i class="fas fa-shield-alt"></i>Thanh toán an toàn & bảo mật
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

