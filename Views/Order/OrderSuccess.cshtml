@model Web_QLNhaHang.Models.Order
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container mt-4 text-center">
    <div class="alert alert-success">
        <i class="fas fa-check-circle fa-3x mb-3"></i>
        <h2>Đặt hàng thành công!</h2>
        <p class="fs-4">Mã đơn hàng: <strong>@Model.OrderNumber</strong></p>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Chi tiết đơn hàng</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Trạng thái đơn hàng:</strong></p>
                    @{
                        var statusBadgeClass = Model.Status switch
                        {
                            "Hoàn thành" => "bg-success",
                            "Hủy" => "bg-danger",
                            _ => "bg-warning"
                        };
                    }
                    <span class="badge @statusBadgeClass fs-6">
                        <i class="fas @(Model.Status == "Hoàn thành" ? "fa-check-circle" : Model.Status == "Hủy" ? "fa-times-circle" : "fa-clock") me-1"></i>
                        @Model.Status
                    </span>
                </div>
                <div class="col-md-6">
                    <p><strong>Trạng thái thanh toán:</strong></p>
                    @{
                        var paymentBadgeClass = Model.PaymentStatus == "Đã thanh toán" ? "bg-success" : "bg-secondary";
                    }
                    <span class="badge @paymentBadgeClass fs-6">
                        <i class="fas @(Model.PaymentStatus == "Đã thanh toán" ? "fa-check-circle" : "fa-clock") me-1"></i>
                        @Model.PaymentStatus
                    </span>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Phương thức thanh toán:</strong></p>
                    @if (Model.PaymentMethod == "VNPay")
                    {
                        <span class="badge bg-info fs-6">
                            <i class="fas fa-university me-1"></i>Thanh toán qua VNPay
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark fs-6">
                            <i class="fas fa-money-bill-wave me-1"></i>Thanh toán khi nhận hàng (COD)
                        </span>
                    }
                </div>
                <div class="col-md-6">
                    <p><strong>Tổng tiền:</strong></p>
                    <span class="text-danger fw-bold fs-5">@Model.TotalAmount.ToString("N0") ₫</span>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.VnpTransactionNo))
            {
                <div class="alert alert-info mb-3">
                    <strong>Mã giao dịch VNPay:</strong> @Model.VnpTransactionNo
                </div>
            }
            
            <h6 class="mt-3 mb-3"><i class="fas fa-utensils me-2"></i>Danh sách món:</h6>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Món</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                            <th>Ghi chú</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.OrderDetails != null)
                        {
                            @foreach (var detail in Model.OrderDetails)
                            {
                                <tr>
                                    <td><strong>@detail.Dish?.DishName</strong></td>
                                    <td>@detail.Quantity</td>
                                    <td>@detail.UnitPrice.ToString("N0") ₫</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(detail.Notes))
                                        {
                                            <span class="badge bg-secondary">@detail.Notes</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="fw-bold text-danger">@detail.SubTotal.ToString("N0") ₫</td>
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4" class="text-end fw-bold">Tổng cộng:</td>
                            <td class="fw-bold text-danger fs-5">@Model.TotalAmount.ToString("N0") ₫</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2 justify-content-center">
        @{
            var customerId = Context.Session.GetInt32("CustomerId");
            if (customerId != null)
            {
                <a asp-controller="Order" asp-action="MyOrders" class="btn btn-primary">
                    <i class="fas fa-list me-2"></i>Xem tất cả đơn hàng
                </a>
            }
            else
            {
                <a asp-controller="Order" asp-action="CheckStatus" asp-route-phone="@Model.CustomerPhone" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i>Kiểm tra trạng thái đơn hàng
                </a>
            }
        }
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-home me-2"></i>Về trang chủ
        </a>
    </div>
</div>

