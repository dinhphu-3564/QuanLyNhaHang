@{
    ViewData["Title"] = "Liên hệ";
}

<!-- Page Banner -->
<div class="page-banner">
    <div class="container">
        <h1>Liên hệ với chúng tôi</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Liên hệ</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container mb-5">
    <div class="row">
        <!-- Contact Info & Map -->
        <div class="col-lg-5 mb-4 mb-lg-0">
            <div class="contact-info-box mb-4">
                <div class="section-heading text-start p-0 mb-4">
                    <h2>Thông tin liên hệ</h2>
                    <div class="divider ms-0"></div>
                </div>
                
                <div class="info-item">
                    <div class="info-icon"><i class="fas fa-map-marker-alt"></i></div>
                    <div class="info-content">
                        <h6>Địa chỉ chính</h6>
                        <p>123 Đường ABC, Quận 1, TP. Hồ Chí Minh</p>
                    </div>
                </div>
                
                <div class="info-item">
                    <div class="info-icon"><i class="fas fa-phone-alt"></i></div>
                    <div class="info-content">
                        <h6>Hotline đặt bàn</h6>
                        <p><strong>1800 2028</strong> (Miễn phí)</p>
                    </div>
                </div>
                
                <div class="info-item">
                    <div class="info-icon"><i class="fas fa-envelope"></i></div>
                    <div class="info-content">
                        <h6>Email hỗ trợ</h6>
                        <p>nhahangviet@gmail.com</p>
                    </div>
                </div>
                
                <div class="info-item">
                    <div class="info-icon"><i class="fas fa-clock"></i></div>
                    <div class="info-content">
                        <h6>Giờ mở cửa</h6>
                        <p>Thứ 2 - Chủ Nhật: 10:30 - 22:00</p>
                    </div>
                </div>
            </div>
            
            <!-- Google Map -->
            <div class="map-box rounded overflow-hidden shadow">
                 <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.4946681007846!2d106.6994193148008!3d10.773374292323579!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f416d66e74b%3A0xe54497e885d9af!2sBitexco%20Financial%20Tower!5e0!3m2!1sen!2s!4v1626252985396!5m2!1sen!2s" 
                         width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-lg-7">
            <div class="form-box">
                <div class="section-heading text-start p-0 mb-4">
                    <h2>Gửi tin nhắn</h2>
                    <p class="subtitle">Chúng tôi luôn sẵn sàng lắng nghe ý kiến của bạn</p>
                    <div class="divider ms-0"></div>
                </div>
                
                <form>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="text" class="form-control-custom" placeholder="Họ và tên của bạn">
                        </div>
                        <div class="col-md-6 form-group">
                            <input type="email" class="form-control-custom" placeholder="Địa chỉ Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control-custom" placeholder="Số điện thoại">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control-custom" placeholder="Tiêu đề tin nhắn">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control-custom" placeholder="Nội dung tin nhắn..."></textarea>
                    </div>
                    <button type="button" class="btn btn-primary-custom px-5 py-3 w-100" onclick="alert('Cảm ơn bạn đã liên hệ! Chúng tôi sẽ phản hồi sớm nhất.')">
                        <i class="fas fa-paper-plane me-2"></i> GỬI TIN NHẮN
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
