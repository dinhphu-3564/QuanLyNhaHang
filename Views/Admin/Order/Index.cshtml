@model List<Web_QLNhaHang.Models.Order>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Quản lý đơn hàng</h2>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row">
            <div class="col-md-3">
                <select name="status" class="form-select">
                    <option value="">Tất cả trạng thái</option>
                    <option value="Chờ">Chờ</option>
                    <option value="Chuẩn bị">Chuẩn bị</option>
                    <option value="Đang giao">Đang giao</option>
                    <option value="Hoàn thành">Hoàn thành</option>
                </select>
            </div>
            <div class="col-md-3">
                <select name="paymentStatus" class="form-select">
                    <option value="">Tất cả thanh toán</option>
                    <option value="Đã thanh toán">Đã thanh toán</option>
                    <option value="Chưa thanh toán">Chưa thanh toán</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-secondary">Lọc</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Khách hàng</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th>Thanh toán</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderNumber</td>
                        <td>@order.CustomerName</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@order.TotalAmount.ToString("N0") ₫</td>
                        <td>
                            <span class="badge @(order.Status == "Hoàn thành" ? "bg-success" : order.Status == "Hủy" ? "bg-danger" : "bg-warning")">
                                @order.Status
                            </span>
                        </td>
                        <td>
                            <span class="badge @(order.PaymentStatus == "Đã thanh toán" ? "bg-success" : "bg-secondary")">
                                @order.PaymentStatus
                            </span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            @if (order.Status != "Hoàn thành" && order.Status != "Hủy")
                            {
                                <form asp-action="UpdateStatus" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@order.OrderId">
                                    <input type="hidden" name="status" value="Hoàn thành">
                                    <button type="submit" class="btn btn-sm btn-success">
                                        <i class="fas fa-check"></i>
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

