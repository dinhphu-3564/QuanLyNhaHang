@model Web_QLNhaHang.Models.Dish
@{
    ViewData["Title"] = "Xóa món ăn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xóa món ăn</h2>

<div class="alert alert-warning">
    <p>Bạn có chắc muốn xóa món ăn này?</p>
</div>

<div class="card">
    <div class="card-body">
        <h5>@Model.DishName</h5>
        <p><strong>Danh mục:</strong> @Model.Category?.CategoryName</p>
        <p><strong>Giá:</strong> @Model.Price.ToString("N0") ₫</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    <input type="hidden" asp-for="DishId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

